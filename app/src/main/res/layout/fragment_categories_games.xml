<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CategoriesGames">


    <Button
        android:id="@+id/clickXboxOne"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="@+id/imgCategoryXboxOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgCategoryXboxOne" />

    <Button
        android:id="@+id/clickWiiU"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="@+id/imgCategoryWiiU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgCategoryWiiU" />

    <TextView
        android:id="@+id/txtViewPS4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PS4"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgCategoryPS4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCategoryPS4"
        app:layout_constraintTop_toTopOf="@+id/imgCategoryPS4"
        app:layout_constraintVertical_bias="0.515" />

    <ImageView
        android:id="@+id/imgCategoryPS4"
        android:layout_width="150sp"
        android:layout_height="200sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imgCategoryWiiU"
        android:layout_width="150sp"
        android:layout_height="200sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCategoryPS4"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtViewWiiU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wii U"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgCategoryWiiU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCategoryWiiU"
        app:layout_constraintTop_toTopOf="@+id/imgCategoryWiiU" />

    <ImageView
        android:id="@+id/imgCategoryXboxOne"
        android:layout_width="150sp"
        android:layout_height="200sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCategoryWiiU"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtViewXboxOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xbox One"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgCategoryXboxOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCategoryXboxOne"
        app:layout_constraintTop_toTopOf="@+id/imgCategoryXboxOne" />

    <Button
        android:id="@+id/clickPS4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="@+id/imgCategoryPS4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgCategoryPS4" />
</androidx.constraintlayout.widget.ConstraintLayout>