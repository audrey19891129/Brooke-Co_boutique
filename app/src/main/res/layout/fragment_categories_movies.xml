<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.CategoriesMovies">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtViewActionAdventure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action / Adventure"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imgCategoryActionAdventure"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgCategoryActionAdventure"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgCategoryActionAdventure"
            android:layout_width="150sp"
            android:layout_height="200sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtViewComedy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comedy"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imgCategoryComedy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgCategoryComedy"
            app:layout_constraintTop_toTopOf="@+id/imgCategoryComedy" />

        <ImageView
            android:id="@+id/imgCategoryComedy"
            android:layout_width="150sp"
            android:layout_height="200sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgCategoryActionAdventure"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imgCategoryDrama"
            android:layout_width="150sp"
            android:layout_height="200sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgCategoryComedy"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imgCategoryScienceFiction"
            android:layout_width="150sp"
            android:layout_height="200sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgCategoryDrama"
            app:layout_constraintVertical_bias="0.0"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtViewDrama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drama"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imgCategoryDrama"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgCategoryDrama"
            app:layout_constraintTop_toTopOf="@+id/imgCategoryDrama" />

        <TextView
            android:id="@+id/txtViewScienceFiction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Science-Fiction"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imgCategoryScienceFiction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgCategoryScienceFiction"
            app:layout_constraintTop_toTopOf="@+id/imgCategoryScienceFiction" />

        <Button
            android:id="@+id/clickActionAdventure"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="@+id/imgCategoryActionAdventure"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgCategoryActionAdventure" />
        <Button
            android:id="@+id/clickScienceFiction"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="@+id/imgCategoryScienceFiction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgCategoryScienceFiction"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/clickDrama"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="@+id/imgCategoryDrama"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgCategoryDrama"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/clickComedy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="@+id/imgCategoryComedy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgCategoryComedy" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>